<p id="notice"><%= notice %></p>

<h1>Policies</h1>

<table>
  <thead>
    <tr>
      <th>Prime</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Comision</th>
      <th>Payment type</th>
      <th>Product</th>
      <th>Client</th>
      <th>Sale executive</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @policies.each do |policy| %>
      <tr>
        <td><%= policy.prime %></td>
        <td><%= policy.start_date %></td>
        <td><%= policy.end_date %></td>
        <td><%= policy.comision %></td>
        <td><%= policy.payment_type %></td>
        <td><%= policy.product %></td>
        <td><%= policy.client %></td>
        <td><%= policy.sale_executive %></td>
        <td><%= link_to 'Show', policy %></td>
        <td><%= link_to 'Edit', edit_policy_path(policy) %></td>
        <td><%= link_to 'Destroy', policy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

